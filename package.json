{
  "name": "webtips_starter_repo",
  "version": "1.0.0",
  "description": "This will act as a starter repository for **WebTips** projects",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "lintJS": "eslint \"src/**/*.js\"",
    "lintHTML": "eslint \"src/**/*.html\"",
    "lintCSS": "stylelint \"src/**/*.css\"",
    "test": "jest --findRelatedTests tests/unit/ --passWithNoTests --coverage --collectCoverageFrom=\"./src/**/*.{js}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.22.0",
    "@html-eslint/parser": "^0.22.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.2",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
